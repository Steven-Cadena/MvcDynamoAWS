@model IEnumerable<MvcDynamoAWS.Models.Coche>

@{
    ViewData["Title"] = "Index";
}

<h1>Coches DynamoDB</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


    <a class="btn btn-success"
       asp-controller="Coches"
       asp-action="Buscador">
        Buscador de coches
    </a>


@if (Model != null)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdCoche)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Modelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Velocidad)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCoche)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Velocidad)
                    </td>
                    <td>
                        <a asp-controller="Coches"
                           asp-action="Details"
                           asp-route-id="@item.IdCoche"
                           class="btn btn-info">
                            Details
                        </a>
                        <a asp-controller="Coches"
                           asp-action="Delete"
                           asp-route-id="@item.IdCoche"
                           class="btn btn-danger">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

